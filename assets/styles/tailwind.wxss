/* Tailwind CSS 样式文件（简化版） */

/* 容器和布局 */
.container {
  width: 100%;
  padding-right: 16rpx;
  padding-left: 16rpx;
  margin-right: auto;
  margin-left: auto;
  box-sizing: border-box;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

/* 间距 */
.m-2 { margin: 8rpx; }
.m-4 { margin: 16rpx; }
.m-6 { margin: 24rpx; }
.mb-2 { margin-bottom: 8rpx; }
.mb-4 { margin-bottom: 16rpx; }
.mb-6 { margin-bottom: 24rpx; }
.p-2 { padding: 8rpx; }
.p-4 { padding: 16rpx; }
.p-6 { padding: 24rpx; }

/* 文本 */
.text-center { text-align: center; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 40rpx; }
.font-bold { font-weight: bold; }
.font-semibold { font-weight: 600; }

/* 颜色 */
.text-white { color: white; }
.text-gray-500 { color: #666; }

/* 圆角 */
.rounded-xl { border-radius: 20rpx; }
.rounded-2xl { border-radius: 30rpx; }
.rounded-full { border-radius: 9999rpx; }