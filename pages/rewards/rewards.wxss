/* pages/rewards/rewards.wxss */
.container {
  padding: 32rpx;
  box-sizing: border-box;
  flex: 1;
}

/* 碎片数量显示 */
.token-display {
  background: linear-gradient(135deg, #FFD166 0%, #FF9F1C 100%);
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.token-title {
  font-size: 28rpx;
  color: white;
  opacity: 0.8;
  display: block;
}

.token-count {
  font-size: 64rpx;
  font-weight: bold;
  color: white;
  margin-top: 16rpx;
  display: block;
}

/* 奖励兑换区域 */
.rewards-section {
  background-color: #f8f9fa;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-reward-btn {
  background-color: #4ECDC4;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1.5;
  box-shadow: 0 4px 10px rgba(78, 205, 196, 0.3);
}

/* 奖励列表 */
.rewards-list {
  gap: 32rpx;
}

.reward-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reward-info {
  flex: 1;
}

.reward-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.reward-cost {
  font-size: 24rpx;
  color: #666;
}

.exchange-btn {
  padding: 16rpx 48rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.exchange-btn.enabled {
  background: linear-gradient(135deg, #4ECDC4 0%, #06D6A0 100%);
  color: white;
  box-shadow: 0 4px 10px rgba(78, 205, 196, 0.3);
}

.exchange-btn.disabled {
  background-color: #ddd;
  color: #999;
}

/* 兑换记录 */
.exchange-history {
  background-color: #f8f9fa;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 120rpx;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.history-list {
  gap: 24rpx;
}

.history-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
}

.history-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-reward {
  font-size: 28rpx;
  color: #333;
}

.history-date {
  font-size: 24rpx;
  color: #999;
}

/* 空状态提示 */
.empty-message {
  text-align: center;
  padding: 64rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 50;
}

.modal-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 48rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  display: block;
  text-align: center;
}

.reward-input, .cost-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-buttons {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.modal-buttons button {
  flex: 1;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.save-btn, .confirm-btn {
  background: linear-gradient(135deg, #4ECDC4 0%, #06D6A0 100%);
  color: white;
}

.confirm-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  display: block;
  line-height: 1.5;
}

.success-icon {
  font-size: 80rpx;
  display: block;
  text-align: center;
  margin-bottom: 32rpx;
}

.success-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  display: block;
  line-height: 1.5;
}

/* 提示弹窗 */
.toast {
  position: fixed;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  z-index: 50;
}